{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .test .flex-container {
    display: flex;
    column-gap: 1rem;
  }

  .test .flex-item {
    background-color: {{ box_color }};
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffff;
  }

{%- endstyle -%}

{%- assign box  = section.blocks.type.box -%}


<div class="test page-width isolate">
  <div class="flex-container">


    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when "box" -%}
          {%- assign box_text = block.settings.box_text -%}
          {%- assign box_color = block.settings.box_color -%}
          <div class="flex-item">
            <h1>{{box_text}}</h1>
          </div>

        {%- else -%}
          
      {%- endcase -%}
    {%- endfor -%}
  </div>




  {%- comment -%}
    {%- if section.settings.image != blank -%}
      <img
        srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
          {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
          {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
          {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
          {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
          {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
        src="{{ section.settings.image | image_url: width: 1500 }}"
        sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  {%- endcomment -%}
</div>

{% schema %}
{
  "name": "t:sections.test.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.test.settings.image.label"
    },
    {
      "type": "select",
      "id": "select_test",
      "options": [
        {
          "value": "Eins",
          "label": "t:sections.test.settings.select_test.options__1.label"
        },
        {
          "value": "Zwei",
          "label": "t:sections.test.settings.select_test.options__2.label"
        },
        {
          "value": "Drei",
          "label": "t:sections.test.settings.select_test.options__3.label"
        }
      ],
      "default": "Zwei",
      "label": "t:sections.test.settings.select_test.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "box",
      "name": "t:sections.image-with-text.blocks.box.name",
      "settings": [
        {
          "type": "text",
          "id": "box_text",
          "default": "Box Text",
          "label": "t:sections.image-with-text.blocks.heading.settings.text.label"
        },
        {
          "type": "color",
          "id": "box_color",
          "default": "#ffff00",
          "label": "t:sections.all.box_color.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.test.name"
    }
  ]
}
{% endschema %}
